
<div class="movies-page-wrapper">
  <h1 class="search-title">Movies</h1>
  <div class="search-wrapper">
    <Input type="text" class="search-input" @value={{this.searchInputValue}} placeholder="Search for a movie, tv show, person..." />
    <button class="search-submit" {{on "click" (fn this.getMovies)}}>Search</button>
  </div>
  <div class="search-results-wrapper">
    {{#each this.searcResults as |movie|}}
      <SearchResultItem @movie={{movie}} />
    {{/each}}
  </div>

  <h1 class="popular-films-title">Popular Films</h1>
  <div class="popular-films-wrapper">
    {{#each this.model as |movie|}}
      <FilmCard @movie={{movie}}/>
    {{/each}}
  </div>
</div>